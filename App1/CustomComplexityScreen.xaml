<Page
    x:Class="App1.CustomComplexityScreen"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:App1"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <CheckBox x:Name="Fname"
                  Content="First Name"
                  FontSize="40"
                  HorizontalAlignment="Center"/>
        <CheckBox x:Name="Lname"
                  Content="Last Name"
                  FontSize="40"
                  Grid.Column="1"
                  HorizontalAlignment="Center"/>
        <CheckBox x:Name="Age"
                  Content="Age"
                  FontSize="42"
                  Grid.Column="2"
                  HorizontalAlignment="Center"/>
        <CheckBox x:Name="Race"
                  Content="Race"
                  FontSize="40"
                  Grid.Column="3"
                  HorizontalAlignment="Center"/>
        <CheckBox x:Name="Profession"
                  Content="Profession"
                  FontSize="40"
                  Grid.Column="4"
                  HorizontalAlignment="Center"/>
        <CheckBox x:Name="Gender"
                  Content="Gender"
                  FontSize="40"
                  Grid.Column="5"
                  HorizontalAlignment="Center"/>

        <CheckBox x:Name="Nationality"
                  Content="Nationality"
                  FontSize="40"
                  Grid.Column="0"
                  Grid.Row="1"
                  HorizontalAlignment="Center"/>
        <CheckBox x:Name="Height"
                  Content="Height"
                  FontSize="40"
                  Grid.Column="1"
                  Grid.Row="1"
                  HorizontalAlignment="Center"/>
        <CheckBox x:Name="Weight"
                  Content="Weight"
                  FontSize="40"
                  Grid.Column="2"
                  Grid.Row="1"
                  HorizontalAlignment="Center"/>
        <CheckBox x:Name="Hair_color"
                  Content="Hair color"
                  FontSize="40"
                  Grid.Column="3"
                  Grid.Row="1"
                  HorizontalAlignment="Center"/>
        <CheckBox x:Name="Eye_color"
                  Content="Eye color"
                  FontSize="40"
                  Grid.Column="4"
                  Grid.Row="1"
                  HorizontalAlignment="Center"/>
        <CheckBox x:Name="Personality"
                  Content="Personality"
                  FontSize="40"
                  Grid.Column="5"
                  Grid.Row="1"
                  HorizontalAlignment="Center"/>

        <CheckBox x:Name="Likes"
                  Content="Likes"
                  FontSize="40"
                  Grid.Column="0"
                  Grid.Row="2"
                  HorizontalAlignment="Center"/>
        <CheckBox x:Name="Dislikes"
                  Content="Dislikes"
                  FontSize="40"
                  Grid.Column="1"
                  Grid.Row="2"
                  HorizontalAlignment="Center"/>
        <CheckBox x:Name="Hit_Points"
                  Content="Hit points"
                  FontSize="40"
                  Grid.Column="2"
                  Grid.Row="2"
                  HorizontalAlignment="Center"/>
        <CheckBox x:Name="Special_Points"
                  Content="Special points"
                  FontSize="40"
                  Grid.Column="3"
                  Grid.Row="2"
                  HorizontalAlignment="Center"/>
        <CheckBox x:Name="Level"
                  Content="Level"
                  FontSize="40"
                  Grid.Column="4"
                  Grid.Row="2"
                  HorizontalAlignment="Center"/>
        <CheckBox x:Name="Strength"
                  Content="Strength"
                  FontSize="40"
                  Grid.Column="5"
                  Grid.Row="2"
                  HorizontalAlignment="Center"/>
        
        <CheckBox x:Name="Dexterity"
                  Content="Dexterity"
                  FontSize="40"
                  Grid.Column="0"
                  Grid.Row="3"
                  HorizontalAlignment="Center"/>
        <CheckBox x:Name="Inteligence"
                  Content="Inteligence"
                  FontSize="40"
                  Grid.Column="1"
                  Grid.Row="3"
                  HorizontalAlignment="Center"/>
        <CheckBox x:Name="Wisdom"
                  Content="Wisdom"
                  FontSize="40"
                  Grid.Column="2"
                  Grid.Row="3"
                  HorizontalAlignment="Center"/>
        <CheckBox x:Name="Constitution"
                  Content="Constitution"
                  FontSize="40"
                  Grid.Column="3"
                  Grid.Row="3"
                  HorizontalAlignment="Center"/>
        <CheckBox x:Name="Will"
                  Content="Will"
                  FontSize="40"
                  Grid.Column="4"
                  Grid.Row="3"
                  HorizontalAlignment="Center"/>
        <CheckBox x:Name="Charisma"
                  Content="Charisma"
                  FontSize="40"
                  Grid.Column="5"
                  Grid.Row="3"
                  HorizontalAlignment="Center"/>

        <CheckBox x:Name="Accent"
                  Content="Accent"
                  FontSize="40"
                  Grid.Column="0"
                  Grid.Row="4"
                  HorizontalAlignment="Center"/>
        <CheckBox x:Name="Style_Of_Dress"
                  Content="Style of dress"
                  FontSize="40"
                  Grid.Column="1"
                  Grid.Row="4"
                  HorizontalAlignment="Center"/>
        <CheckBox x:Name="Friends"
                  Content="Friends"
                  FontSize="40"
                  Grid.Column="2"
                  Grid.Row="4"
                  HorizontalAlignment="Center"/>
        <CheckBox x:Name="Enimies"
                  Content="Enimies"
                  FontSize="40"
                  Grid.Column="3"
                  Grid.Row="4"
                  HorizontalAlignment="Center"/>
        <CheckBox x:Name="Significant_Other"
                  Content="Significant other"
                  FontSize="40"
                  Grid.Column="4"
                  Grid.Row="4"
                  HorizontalAlignment="Center"/>
        <CheckBox x:Name="Fighting_Style"
                  Content="Fighting style"
                  FontSize="40"
                  Grid.Column="5"
                  Grid.Row="4"
                  HorizontalAlignment="Center"/>

        <CheckBox x:Name="Preferred_Weapon"
                  Content="Preferred weapon"
                  FontSize="40"
                  Grid.Column="0"
                  Grid.Row="5"
                  HorizontalAlignment="Center"/>
        <CheckBox x:Name="Favorite_food"
                  Content="Favorite food"
                  FontSize="40"
                  Grid.Column="1"
                  Grid.Row="5"
                  HorizontalAlignment="Center"/>
        <CheckBox x:Name="Armor_Class"
                  Content="Armor class"
                  FontSize="40"
                  Grid.Column="2"
                  Grid.Row="5"
                  HorizontalAlignment="Center"/>
        <CheckBox x:Name="Proficiency_Bonus"
                  Content="Proficiency bonus"
                  FontSize="40"
                  Grid.Column="3"
                  Grid.Row="5"
                  HorizontalAlignment="Center"/>
        <CheckBox x:Name="insperation"
                  Content="Insperation"
                  FontSize="40"
                  Grid.Column="4"
                  Grid.Row="5"
                  HorizontalAlignment="Center"/>
        <CheckBox x:Name="perception"
                  Content="Perception"
                  FontSize="40"
                  Grid.Column="5"
                  Grid.Row="5"
                  HorizontalAlignment="Center"/>

        <CheckBox x:Name="Spellcasting_Ability"
                  Content="spellcasting ability"
                  FontSize="40"
                  Grid.Column="0"
                  Grid.Row="6"
                  HorizontalAlignment="Center"/>
        <CheckBox x:Name="Spell_Save_DC"
                  Content="Spell save DC"
                  FontSize="40"
                  Grid.Column="1"
                  Grid.Row="6"
                  HorizontalAlignment="Center"/>
        <CheckBox x:Name="Spell_Attack_Bonus"
                  Content="Spell attack bonus"
                  FontSize="40"
                  Grid.Column="2"
                  Grid.Row="6"
                  HorizontalAlignment="Center"/>
        <CheckBox x:Name="EXP"
                  Content="Exp"
                  FontSize="40"
                  Grid.Column="3"
                  Grid.Row="6"
                  HorizontalAlignment="Center"/>
        <CheckBox x:Name="Groups"
                  Content="groups"
                  FontSize="40"
                  Grid.Column="4"
                  Grid.Row="6"
                  HorizontalAlignment="Center"/>

        <Button x:Name="Back"
                Grid.Row="6"
                Grid.Column="6"
                Content="Go back"
                Height="150"
                Width="75"
                Click="Back_Click"/>
        
        <Button x:Name="Save"
                Grid.Row="6"
                Grid.Column="6"
                Content="Save"
                Height="150"
                Width="75"
                HorizontalAlignment="Right"
                Click="Save_Click"/>

    </Grid>
</Page>
